@using Microsoft.AspNetCore.Identity;
@model List<ContactViewModel>

@if (User.IsInRole("Admin") || User.IsInRole("Manager"))
{
    <div class="mb-4 row">
        <div>
            <a class="btn btn-primary" asp-area="Pharmacist" asp-controller="Contact" asp-action="CreateContact">
                <i class='bx bx-plus-circle icon'></i>
                <span>Додати контакт</span>
            </a>
        </div>
    </div>
}

@foreach (var item in Model)
{
    <div class="card p-4 mb-4">
        <div class="row">
            <div class="col-md-1 row text-center align-self-center">
                <i id="user-avatar" class='bx bx-user-circle'></i>
            </div>

            <div class="col-md-3">
                <div class="row text-center align-self-center">
                    <div>
                        <span>ID: @item.ID</span>
                    </div>
                </div>
            </div>

            <div class="col-md-2">
                <div class="row text-center align-self-center">
                    <div>
                        <span>Ім'я: @item.FirstName</span>
                    </div>

                    <div>
                        <span>Прізвище: @item.LastName </span>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="row text-center align-self-center">
                    <div>
                        <span>Поштова адреса: @item.Email</span>
                    </div>

                    <div>
                        <span>Номер телефону: @item.Phone</span>
                    </div>
                </div>
            </div>

            <div class="col-md-3 row align-self-center text-center">
                <div>
                    @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                    {
                        <a class="btn btn-primary my-md-2" asp-area="Pharmacist" asp-controller="Product" asp-action="UpdateProductPanel" asp-route-id="@item.ID">
                            <i class='bx bx-edit icon'></i>
                            <span>Редагувати</span>
                        </a>

                        <a class="btn btn-danger" asp-area="Pharmacist" asp-controller="Contact" asp-action="RemoveContactByID" asp-route-id="@item.ID">
                            <i class='bx bx-trash icon'></i>
                            <span>Видалити</span>
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
}
