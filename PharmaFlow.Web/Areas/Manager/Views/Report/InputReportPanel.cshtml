@using Microsoft.AspNetCore.Identity;
@using PharmaFlow.Web.Areas.Manager.ViewModels.Report;
@model List<InputReportViewModel>

<table class="table table-hover table-light">

    <thead>

        <tr>
            <th scope="col">ID</th>
            <th scope="col">Назва продукту</th>
            <th scope="col">Кількість</th>
            <th scope="col">Загальна сума</th>
            <th scope="col">Час закупки</th>
            <th scope="col">Імейл закуповувача</th>
            <th scope="col"></th>
        </tr>
    </thead>

    <tbody>

        @foreach (var report in Model)
        {
            <tr class="table-light">
                <th scope="row">@report.ID</th>
                <td>@report.ProductName</td>
                <td>@report.Count</td>
                <td>@report.TotalPrice ₴</td>
                <td>@report.CreatedOn</td>
                <td>@report.UserEmail</td>
                <td>
                    <div>
                        <a class="text-danger text-decoration-none mx-3" asp-area="Manager" asp-controller="MedicalFacility" asp-action="RemoveMedicalFacilityContactByID" asp-route-id="@report.ID">Видалити</a>
                    </div>
                </td>
            </tr>
        }

    </tbody>

</table>