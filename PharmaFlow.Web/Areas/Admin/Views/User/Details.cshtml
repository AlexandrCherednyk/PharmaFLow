@model DetailedUserViewModel

<div class="card p-4 mb-4">
    <form method="post" asp-action="UpdateUser" asp-controller="User" asp-area="Admin" asp-anti-forgery="true">
        <h2 class="text-center mb-4">Оновити дані користувача</h2>

        <div class="validation text-danger mx-2">
            <p>@ViewBag.UpdateUserErrorMessage</p>
        </div>

        <div class="col-4 mx-2">
            <div>
                <div class="form-group row my-3">
                    <span class="col-md-4 col-form-label">ID:</span>
                    <div class="col-md-8">
                        <input class="form-control" id="ID" name="ID" type="text" value="@Model.ID" disabled="">
                        <input class="form-control" name="ID" type="hidden" value="@Model.ID">
                        <input class="form-control" name="Email" type="hidden" value="@Model.Email">
                        <input class="form-control" name="Role" type="hidden" value="@Model.Role">
                    </div>
                </div>

                <div class="mb-3 form-group row">
                    <label class="col-md-4 col-form-label" for="FirstName">Ім'я:</label>
                    <div class="col-md-8">
                        <input type="text" asp-for="FirstName" id="firstName" class="form-control" placeholder="First name" />
                        <span asp-validation-for="FirstName" class="field-validation-error text-danger" />
                    </div>
                </div>

                <div class="mb-3 form-group row">
                    <label class="col-md-4 col-form-label" for="LastName">Прізвище:</label>
                    <div class="col-md-8">
                        <input type="text" asp-for="LastName" id="lastName" class="form-control" placeholder="Last name" />
                        <span asp-validation-for="LastName" class="field-validation-error text-danger" />
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Оновити</button>

        </div>
    </form>
</div>

<div class="card p-4 mb-4">
    <form method="post" asp-action="UpdateUserEmail" asp-controller="User" asp-area="Admin" asp-anti-forgery="true">
        <h2 class="text-center mb-4">Змінити електронну пошту користувача</h2>

        <div class="validation text-danger mx-2">
            <p>@ViewBag.UpdateUserEmailErrorMessage</p>
        </div>

        <input class="form-control" name="ID" type="hidden" value="@Model.ID">
        <input class="form-control" name="FirstName" type="hidden" value="@Model.FirstName">
        <input class="form-control" name="LastName" type="hidden" value="@Model.LastName">
        <input class="form-control" name="Role" type="hidden" value="@Model.Role">
        
        <div class="col-4 mx-2">
            <div class="mb-3 form-group row">
                <label class="col-md-4 col-form-label" for="Email">Електронна пошта:</label>
                <div class="col-md-8">
                    <input type="text" asp-for="Email" id="Email" class="form-control" placeholder="Email" />
                    <span asp-validation-for="Email" class="field-validation-error text-danger" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Змінити адрес електронної пошти</button>
        </div>
    </form>
</div>

<div class="card p-4 mb-4">
    <form method="post" asp-action="UpdateUserPassword" asp-controller="User" asp-area="Admin" asp-anti-forgery="true">
        <h2 class="text-center mb-4">Змінити пароль користувача</h2>

        <div class="validation text-danger mx-2">
            <p>@ViewBag.UpdateUserPasswordErrorMessage</p>
        </div>

        <input class="form-control" name="ID" type="hidden" value="@Model.ID">
        <input class="form-control" name="FirstName" type="hidden" value="@Model.FirstName">
        <input class="form-control" name="LastName" type="hidden" value="@Model.LastName">
        <input class="form-control" name="Email" type="hidden" value="@Model.Email">
        <input class="form-control" name="Role" type="hidden" value="@Model.Role">

        <div class="col-4 mx-2">
            <div class="mb-3 form-group row">
                <label class="col-md-4 col-form-label" for="Password">Пароль:</label>
                <div class="col-md-8">
                    <input type="password" asp-for="PasswordForm!.Password" id="password" class="form-control"/>
                    <span asp-validation-for="PasswordForm!.Password" class="field-validation-error text-danger" />

                </div>
            </div>

            <div class="mb-3 form-group row">
                <label class="col-md-4 col-form-label" for="ConfirmPassword">Підтвердьте пароль:</label>
                <div class="col-md-8">
                    <input type="password" asp-for="PasswordForm!.PasswordConfirm" id="confirm-password" class="form-control"/>
                    <span asp-validation-for="PasswordForm!.PasswordConfirm" class="field-validation-error text-danger" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Змінити пароль</button>
        </div>
    </form>
</div>

@section  Scripts{
    @await Html.PartialAsync("/Views/Shared/_ValidationScriptsPartial.cshtml")
}
